# Sports Analytics Pro - Environment Configuration Template
# Make a copy of this file as .env and fill in your values

# ===============================================================
# API Keys and Authentication
# ===============================================================

# Sports data API keys
SPORTS_API_KEY=your_sports_api_key_here
STATS_API_KEY=your_stats_api_key_here
DATA_PROVIDER_API_KEY=your_data_provider_key_here

# NLP and AI services
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_key_here

# Authentication secrets
JWT_SECRET=your_jwt_secret_here
PREMIUM_API_KEY=your_premium_api_key_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# ===============================================================
# Database Configuration
# ===============================================================

# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/sports_analytics
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password

# Redis cache
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ===============================================================
# Application Configuration
# ===============================================================

# Server settings
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Data paths
DATA_DIR=data
MODEL_DIR=models
CACHE_DIR=cache
NLP_MODEL_PATH=models/factor_classifier.pkl

# Prediction engine settings
MAX_FACTORS=5
PREDICTION_CACHE_TTL=3600
PREMIUM_RATE_LIMIT=100

# Machine learning model parameters
XGB_N_ESTIMATORS=1000
XGB_LEARNING_RATE=0.01
XGB_MAX_DEPTH=8
LGB_N_ESTIMATORS=1000
LGB_LEARNING_RATE=0.01
LGB_MAX_DEPTH=8

# ===============================================================
# External Services
# ===============================================================

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Analytics and monitoring
ENABLE_ANALYTICS=true
METRICS_ENDPOINT=http://localhost:9090

# ===============================================================
# Feature Flags
# ===============================================================

# Features
ENABLE_CUSTOM_FACTORS=true
ENABLE_MULTI_FACTORS=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_EXPERIMENTAL=false

# ===============================================================
# Subscription Tiers
# ===============================================================

# Tier limits
BASIC_PREDICTION_LIMIT=10
PREMIUM_PREDICTION_LIMIT=50
ULTRA_PREMIUM_PREDICTION_LIMIT=1000

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
REDIS_URL=redis://localhost:6379
DATABASE_NAME=sports_analytics
COLLECTION_PREFIX=sa_

# API Keys
ODDS_API_KEY=your_odds_api_key_here
BETFAIR_API_KEY=your_betfair_api_key_here
BETFAIR_SESSION_TOKEN=your_betfair_session_token_here
SPORTS_DB_API_KEY=your_sports_db_api_key_here

# API Settings
MAX_REQUESTS_PER_MINUTE=60
REQUEST_TIMEOUT=30

# WebSocket Configuration
WEBSOCKET_SERVER_URL=ws://localhost:8765
CLIENT_ID=default_client
MAX_CONNECTIONS=1000
PING_INTERVAL=20
COMPRESSION_THRESHOLD=1024

# Analytics Settings
CACHE_TTL=3600
MAX_HISTORICAL_DAYS=730
CONFIDENCE_THRESHOLD=0.7
MIN_DATA_POINTS=10
UPDATE_INTERVAL=300

# Visualization Settings
VISUALIZATION_THEME=dark
COLOR_SCHEME=default
VIS_UPDATE_INTERVAL=5
MAX_DATA_POINTS=100
ANIMATION_DURATION=500

# System Settings
DEBUG_MODE=false
MAX_WORKERS=4
MEMORY_LIMIT=4096
TEMP_DIR=/tmp/sports_analytics 